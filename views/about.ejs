    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js" defer></script>


    <script>
    document.addEventListener('DOMContentLoaded', function() {
        if (typeof AOS !== 'undefined') {
            AOS.init({
                once: true,
                duration: 700,
                easing: 'ease-out-cubic',
                offset: 50
            });
        }

        if (typeof Zdog !== 'undefined') {
            const zdogCanvas = document.getElementById('zdog-hero-canvas');
            if (zdogCanvas) {
                let illo = new Zdog.Illustration({
                    element: zdogCanvas, zoom: 1.2, dragRotate: true, resize: 'fullscreen',
                });
                const accentColor = getComputedStyle(document.documentElement).getPropertyValue('--color-accent').trim() || '#b9936c';
                const accentDarkColor = getComputedStyle(document.documentElement).getPropertyValue('--color-accent-dark').trim() || '#a07e5a';
                const accentLightColor = getComputedStyle(document.documentElement).getPropertyValue('--color-accent-light').trim() || '#e1c8a0';
                let knotGroup = new Zdog.Group({ addTo: illo, translate: { y: -10 } });
                new Zdog.Ellipse({ addTo: knotGroup, diameter: 70, stroke: 12, color: accentColor });
                new Zdog.Shape({
                    addTo: knotGroup, path: [ { x: -35, y: 0 }, { bezier: [ { x: -55, y: 0 }, { x: -45, y: -30 }, { x: -25, y: -35 } ] }, { bezier: [ { x: 0, y: -40 }, { x: 25, y: -35 }, { x: 0, y: -15 } ] }, { bezier: [ { x: -25, y: 5 }, { x: -45, y: 30 }, { x: -35, y: 0 } ] }, ],
                    closed: false, stroke: 6, color: accentDarkColor, rotate: { z: Zdog.TAU/8 }
                });
                new Zdog.Shape({
                    addTo: knotGroup, path: [ { x: 35, y: 0 }, { bezier: [ { x: 55, y: 0 }, { x: 45, y: 30 }, { x: 25, y: 35 } ] }, { bezier: [ { x: 0, y: 40 }, { x: -25, y: 35 }, { x: 0, y: 15 } ] }, { bezier: [ { x: 25, y: -5 }, { x: 45, y: -30 }, { x: 35, y: 0 } ] }, ],
                    closed: false, stroke: 6, color: accentLightColor, rotate: { z: -Zdog.TAU/8 }
                });
                let t = 0;
                function animateZdog() {
                    knotGroup.rotate.y += 0.003;
                    knotGroup.rotate.x = Math.sin(t * 0.05) * 0.2;
                    t++;
                    illo.updateRenderGraph();
                    requestAnimationFrame(animateZdog);
                }
                animateZdog();
                window.addEventListener('resize', () => { illo.setSize(zdogCanvas.offsetWidth, zdogCanvas.offsetHeight); });
                illo.setSize(zdogCanvas.offsetWidth, zdogCanvas.offsetHeight);
            }
        }

       if (typeof gsap !== 'undefined' && typeof ScrollTrigger !== 'undefined') {
        gsap.registerPlugin(ScrollTrigger);

        const processSection = document.querySelector('.creation-process-scrollytelling');
        if (processSection) {
            const progressPanel = processSection.querySelector('.process-progress-panel');
            const progressFill = processSection.querySelector('.progress-line-fill');
            const stepNavItems = gsap.utils.toArray('.process-steps-nav .step-nav-item'); // Може бути корисним для десктопу
            const stepContents = gsap.utils.toArray('.process-content-panel .process-step-content');

            if (progressPanel && progressFill && stepContents.length > 0) {

                ScrollTrigger.create({
                    trigger: processSection,
                    start: "top top", // Пін починається, коли верх секції досягає верху в'юпорту
                    endTrigger: stepContents[stepContents.length - 1], // Кінець, коли останній блок контенту в полі зору
                    // ВАЖЛИВО: скоригуй end, щоб врахувати висоту панелі прогресу
                    // Кінець, коли низ останнього блоку контенту досягає низу закріпленої панелі прогресу + невеликий буфер
                    end: () => `bottom bottom-=${progressPanel.offsetHeight + 20}`, // +20px буфер
                    pin: progressPanel,
                    scrub: 1, // Плавний скраб
                    anticipatePin: 1,
                    // markers: {startColor: "green", endColor: "red", indent: 0, fontSize: "10px"}, // Розкоментуй для дебагу
                    onUpdate: self => {
                        let progress = self.progress;
                        progress = Math.max(0, Math.min(progress, 1)); // Гарантуємо, що прогрес між 0 та 1

                        gsap.to(progressFill, { height: (progress * 100) + '%', ease: "none" });

                        // Логіка для класу 'active' на навігаційних елементах (якщо вони видимі)
                        // Ця частина для .step-nav-item, яка прихована на мобільних.
                        if (stepNavItems.length === stepContents.length) {
                            const numSteps = stepContents.length;
                            let currentOverallStep = Math.floor(progress * numSteps);
                            if (progress >= 0.999) { // Гарантуємо, що останній крок підсвічений в самому кінці
                                currentOverallStep = numSteps - 1;
                            }
                            stepNavItems.forEach((navItem, index) => {
                                navItem.classList.toggle('active', index <= currentOverallStep);
                            });
                        }
                    },
                    onLeave: () => {
                        // Гарантуємо, що прогрес-бар заповнений, коли проскролили повз секцію
                        gsap.to(progressFill, { height: '100%', ease: "none" });
                        if (stepNavItems.length === stepContents.length) {
                            stepNavItems.forEach((navItem, index) => {
                                navItem.classList.add('active'); // Всі активні
                                if (index === stepNavItems.length - 1) {
                                    navItem.classList.add('fully-active'); // Останній повністю активний
                                } else {
                                    navItem.classList.remove('fully-active');
                                }
                            });
                        }
                    },
                    onEnterBack: self => {
                        // При поверненні в секцію, перераховуємо прогрес
                        let progress = self.progress;
                        progress = Math.max(0, Math.min(progress, 1));
                        gsap.to(progressFill, { height: (progress * 100) + '%', ease: "none" });

                        if (stepNavItems.length === stepContents.length) {
                            const numSteps = stepContents.length;
                            let currentOverallStep = Math.floor(progress * numSteps);
                            if (progress >= 0.999) {
                                currentOverallStep = numSteps - 1;
                            }
                            stepNavItems.forEach((navItem, index) => {
                                navItem.classList.toggle('active', index <= currentOverallStep);
                                // 'fully-active' керується трігерами блоків контенту
                            });
                        }
                    }
                });

                // ScrollTriggers для кожного кроку контенту (для появи/зникнення та керування 'fully-active' для навігації)
                stepContents.forEach((content, index) => {
                    gsap.set(content, { autoAlpha: 0, y: 50 }); // Початковий стан: приховано та трохи зміщено

                    ScrollTrigger.create({
                        trigger: content,
                        // Скоригуй start/end для моменту, коли контент стає "активним"
                        // "top center+=X%" - верх контенту на X% нижче центру в'юпорту
                        // "bottom center-=Y%" - низ контенту на Y% вище центру в'юпорту
                        start: "top center+=20%", // З'являється трохи пізніше
                        end: "bottom center-=20%",   // Зникає трохи раніше
                        // markers: {startColor: `hsl(${index * 60}, 100%, 70%)`, endColor: `hsl(${index * 60}, 100%, 40%)`, indent: 150 + index * 10, fontSize: "10px"}, // Дебаг
                        onEnter: () => {
                            gsap.to(content, { autoAlpha: 1, y: 0, duration: 0.4, ease: "power1.out" });
                            if (stepNavItems[index]) { // Якщо навігація існує
                                stepNavItems.forEach((nav) => nav.classList.remove('fully-active'));
                                stepNavItems[index].classList.add('fully-active');
                            }
                        },
                        onLeave: () => {
                            gsap.to(content, { autoAlpha: 0, y: -30, duration: 0.3, ease: "power1.in" });
                        },
                        onEnterBack: () => {
                            gsap.to(content, { autoAlpha: 1, y: 0, duration: 0.4, ease: "power1.out" });
                            if (stepNavItems[index]) {
                                stepNavItems.forEach((nav) => nav.classList.remove('fully-active'));
                                stepNavItems[index].classList.add('fully-active');
                            }
                        },
                        onLeaveBack: () => {
                            gsap.to(content, { autoAlpha: 0, y: 30, duration: 0.3, ease: "power1.in" });
                            if (stepNavItems[index]) stepNavItems[index].classList.remove('fully-active');
                            if (index > 0 && stepNavItems[index - 1]) {
                                stepNavItems[index - 1].classList.add('fully-active');
                            } else if (index === 0) {
                                stepNavItems.forEach((nav) => nav.classList.remove('fully-active'));
                            }
                        }
                    });
                });
            } else {
                console.warn("GSAP Scrollytelling: Не знайдено всіх необхідних елементів для секції процесу (progressPanel, progressFill, stepContents).");
            }
        } else {
            console.warn("GSAP Scrollytelling: Головну секцію процесу '.creation-process-scrollytelling' не знайдено.");
        }
    } else {
        console.error('Бібліотеки GSAP або ScrollTrigger не завантажені.');
    }
});
    </script>
